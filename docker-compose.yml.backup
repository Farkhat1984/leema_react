version: '3.8'

services:
  # Frontend React Application
  frontend:
    build:
      context: .
      dockerfile: Dockerfile
    container_name: leema_frontend
    restart: unless-stopped
    ports:
      - "80:80"
      - "443:443"
    volumes:
      # SSL certificates (managed externally or via certbot)
      - ./ssl/letsencrypt:/etc/letsencrypt:ro
      - ./ssl/certbot:/var/www/certbot:ro
      # Nginx logs
      - ./logs/nginx:/var/log/nginx
    environment:
      - NODE_ENV=production
    networks:
      - leema_network
    healthcheck:
      test: ["CMD", "wget", "--quiet", "--tries=1", "--spider", "http://localhost/"]
      interval: 30s
      timeout: 3s
      retries: 3
      start_period: 10s
    depends_on:
      - backend

  # Backend API (if running in Docker)
  backend:
    image: your-backend-image:latest  # Replace with actual backend image
    container_name: leema_backend
    restart: unless-stopped
    ports:
      - "8000:8000"  # Adjust based on your backend port
    environment:
      - DATABASE_URL=${DATABASE_URL}
      - JWT_SECRET=${JWT_SECRET}
      - GOOGLE_CLIENT_ID=${GOOGLE_CLIENT_ID}
      - GOOGLE_CLIENT_SECRET=${GOOGLE_CLIENT_SECRET}
    networks:
      - leema_network
    # Uncomment if using database
    # depends_on:
    #   - postgres

  # Optional: PostgreSQL Database
  # postgres:
  #   image: postgres:15-alpine
  #   container_name: leema_postgres
  #   restart: unless-stopped
  #   environment:
  #     - POSTGRES_DB=${POSTGRES_DB:-leema}
  #     - POSTGRES_USER=${POSTGRES_USER:-leema_user}
  #     - POSTGRES_PASSWORD=${POSTGRES_PASSWORD}
  #   volumes:
  #     - postgres_data:/var/lib/postgresql/data
  #   networks:
  #     - leema_network
  #   ports:
  #     - "5432:5432"

  # Optional: Redis Cache
  # redis:
  #   image: redis:7-alpine
  #   container_name: leema_redis
  #   restart: unless-stopped
  #   networks:
  #     - leema_network
  #   ports:
  #     - "6379:6379"
  #   volumes:
  #     - redis_data:/data

networks:
  leema_network:
    driver: bridge

volumes:
  postgres_data:
  redis_data:
