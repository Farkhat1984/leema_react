{
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "target": "ES2022",
    "useDefineForClassFields": true,
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "types": ["vite/client"],
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": false,
    "moduleDetection": "force",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Path Aliases */
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@/features/*": ["./src/features/*"],
      "@/shared/*": ["./src/shared/*"],
      "@/assets/*": ["./src/assets/*"],
      "@/tests/*": ["./src/tests/*"]
    },

    /* Linting */
    "strict": true,
    "noUnusedLocals": false, // Disabled to allow unused variables (cleaned by ESLint)
    "noUnusedParameters": false, // Disabled to allow unused parameters (cleaned by ESLint)
    "noImplicitReturns": true, // Enforces explicit return in all code paths
    "noImplicitOverride": true, // Requires 'override' keyword when overriding
    "noPropertyAccessFromIndexSignature": false,
    "erasableSyntaxOnly": true,
    "noFallthroughCasesInSwitch": true, // Prevents fall-through in switch statements
    "noUncheckedSideEffectImports": true,
    "noUncheckedIndexedAccess": false,
    "exactOptionalPropertyTypes": false,
    "allowUnusedLabels": false, // Disallows unused labels
    "allowUnreachableCode": false // Disallows unreachable code
  },
  "include": ["src"]
}
